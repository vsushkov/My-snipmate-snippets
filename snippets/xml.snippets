snippet phpunit
	<phpunit>
		<suite>
			<modules>
				<`substitute(expand("%:r"), 'app/code/\(community\|local\)/\(\w*\)/\(\w*\)/.*', '\=submatch(2) . "_" . submatch(3)', 'g')` />
			</modules>
		</suite>
	</phpunit>
